<div>
  <h3><strong>Results</strong></h3>
  <% if @query.results.size > 0 %>
    <p>Yay! There are places for you to meet up...here are four possibilities:</p>
    
      <% @query.results_in_words.each.with_index do |r, i| %>
      <div class="col-lg-4 well bs-component">
        <strong>Sequence <%= i+1 %>:</strong><br>
        <ul>
          <li>Person 1:<br>
            <ul>
              <% r[0].each do |leg| %>
                <li><%= leg %></li>
              <% end %>
            </ul>
          </li>
          <li>Person 2:<br>
            <ul>
              <% r[1].each do |leg| %>
                <li><%= leg %></li>
              <% end %>
            </ul>
          </li> 
        </ul>
      </div>
      <div class="col-lg-1">
      </div>
      <% end %>
    
  <% else %>
    <p>Boohoo! No common stops found for your query. Try again!</p>
  <% end %>
</div>